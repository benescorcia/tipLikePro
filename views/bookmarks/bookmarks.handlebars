{{> header}}

<div class="container">
    <div class="row mt-3 mx-auto">
        {{#each bookmarks}}
        <div class="card mr-2" style="width: 10rem;">
            <p>{{this.link}} - {{this.description}} - {{this.created}} </p>
        </div>
        {{/each}}
        <div class="col-md-6 col-sm-4"><a href="/bookmarks/new"><ion-icon name="add-circle" class="text-primary mt-5" ></ion-icon></a></div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <footer class="footer-dash">
                <a href="/logout"><ion-icon name="exit" class="logout"></ion-icon></a>
            </footer>
        </div>
    </div>
</div>

